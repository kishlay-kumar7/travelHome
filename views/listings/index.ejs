<% layout('/layouts/boilerplate') -%>
<head>
  <!-- FontAwesome CDN for Icons -->
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    rel="stylesheet"
  />
  <style>
    /* Icon Container Styling */
    .icon-container {
      display: flex;
      justify-content: space-around;
      align-items: center;
      padding: 20px;
      margin-bottom: 20px;
    }

    /* Styling for each icon item */
    .icon-item {
      display: flex;
      flex-direction: column; /* Stack icon above text */
      align-items: center; /* Center align the icon and text */
      cursor: pointer;
      font-size: 18px;
      opacity: 0.5; /* Initial opacity */
      transition: opacity 0.3s, border-bottom 0.3s; /* Smooth opacity and border transition */
      position: relative;
    }

    /* Hover effect */
    .icon-item:hover {
      opacity: 0.8;
    }

    /* Default underline */
    .icon-item.active::after,
    .icon-item:hover::after {
      content: "";
      position: absolute;
      bottom: -5px;
      width: 100%;
      height: 3px;
      background-color: black;
      border-radius: 2px;
    }

    /* Active underline with higher opacity */
    .icon-item.active::after {
      height: 4px;
      background-color: black;
      opacity: 1;
    }

    /* Icon size and spacing */
    .icon-item i {
      font-size: 22px;
      margin-bottom: 8px;
    }

    /* Text styling */
    .icon-item span {
      font-size: 14px;
      color: #333;
    }
  </style>
</head>
<body>
  <!-- Icon Section -->
  <div class="icon-container">
    <div class="icon-item active">
      <i class="fas fa-home"></i><span>Home</span>
    </div>
    <div class="icon-item"><i class="fas fa-bed"></i><span>Rooms</span></div>
    <div class="icon-item">
      <i class="fas fa-map-marker-alt"></i><span>Location</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-bolt"></i><span>Electricity</span>
    </div>
    <div class="icon-item"><i class="fas fa-wifi"></i><span>WiFi</span></div>
    <div class="icon-item"><i class="fas fa-car"></i><span>Parking</span></div>
    <div class="icon-item"><i class="fas fa-tv"></i><span>TV</span></div>
    <div class="icon-item"><i class="fas fa-dumbbell"></i><span>Gym</span></div>
    <div class="icon-item">
      <i class="fas fa-utensils"></i><span>Kitchen</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-smile"></i><span>Happy Guests</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-cogs"></i><span>Facilities</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-umbrella-beach"></i><span>Beach</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-fire-extinguisher"></i><span>Safety</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-paw"></i><span>Pets Allowed</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-asterisk"></i><span>Special Offers</span>
    </div>
    <div class="icon-item"><i class="fas fa-heart"></i><span>Love</span></div>
    <div class="icon-item">
      <i class="fas fa-mountain"></i><span>Adventure</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-moon"></i><span>Nightlife</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-cocktail"></i><span>Drinks</span>
    </div>
    <div class="icon-item">
      <i class="fas fa-snowflake"></i><span>Air Conditioning</span>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <% for (let list of data) { %>
      <div class="col-md-4 col-sm-6 mb-4 listing-item">
        <a
          href="/listings/<%= list._id %>/view"
          class="listing-link"
          style="text-decoration: none"
        >
          <div class="listing-image-container">
            <img
              src="<%= list.image.url %>"
              class="listing-image"
              alt="image of <%= list.title %>"
            />
          </div>
          <div class="listing-info">
            <h5 class="listing-title"><%= list.title %></h5>
            <p class="listing-description"><%= list.description %></p>
            <% if (!list.price) { %>
            <p style="color: crimson; font-weight: 90">Price unavailable</p>
            <% } else { %>
            <p class="listing-price">
              <span class="new-price"
                ><%= (list.price / 2).toLocaleString('en-US', { style:
                'currency', currency: 'USD' }) %> &nbsp;</span
              >
              <span
                class="old-price"
                style="
                  text-decoration: line-through;
                  color: red;
                  font-weight: 100;
                "
              >
                <%= list.price.toLocaleString('en-US', { style: 'currency',
                currency: 'USD' }) %> &nbsp;
              </span>
            </p>
            <% } %>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</body>
